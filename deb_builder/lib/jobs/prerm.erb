#!/bin/bash

BOSH_INSTALL_TARGET=/var/vcap/data/jobs/<%= job_name %>

echo "Stopping <%= job_name %>"
monit stop <%= job_name %>

echo "Waiting for <%= job_name %> to stop ..."
sleep 15

rm -f /etc/monit/uhururc.d_pieces/<%= job_name %>

rm -f /var/vcap/jobs/<%= job_name %>
rm -rf ${BOSH_INSTALL_TARGET}

exit 0
