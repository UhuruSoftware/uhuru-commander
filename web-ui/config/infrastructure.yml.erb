--- 
name: micro_bosh
port: 25555
max_threads: 1
max_tasks: 2000
encryption: 
logging: 
  level: DEBUG
  file: /var/vcap/sys/log/director/<%%= ENV["COMPONENT"] %>.debug.log
redis: 
  host: 127.0.0.1
  port: 25255
  password: redis
<% nats_password = SecureRandom.hex %>
mbus: nats://nats:<%= nats_password %>@<%= $config[:bind_address] %>:4222
dir: /var/vcap/store/director
db: 
  database: postgres://postgres:<%= SecureRandom.hex %>@<%= $config[:bind_address] %>/bosh
  max_connections: 32
  pool_timeout: 10
dns: 
  server: 127.0.0.1
  db: 
    database: postgres://powerdns:powerdns@127.0.0.1:5445/powerdns
    max_connections: 32
    pool_timeout: 10
blobstore: 
  provider: simple
  options:
    endpoint: http://<%= $config[:bind_address] %>:25250
    user: director
    password: director
cloud: 
  plugin: vsphere
  properties: 
    agent: 
      ntp:
      - 0.pool.ntp.org
      - 1.pool.ntp.org
      blobstore:
        provider: simple
        options:
          endpoint: http://<%= $config[:bind_address] %>:25250
          user: agent
          password: agent
      mbus: nats://nats:<%= nats_password %>@<%= $config[:bind_address] %>:4222
    mem_overcommit_ratio: 0.7
    cpi_log: /var/vcap/sys/log/director/<%%= ENV["COMPONENT"] %>.cpi.log
    vcenters: 
    - host:
      user:
      password:
      datacenters: 
      - name:
        vm_folder: uhuru_cloud_vms
        template_folder: uhuru_cloud_templates
        disk_path: uhuru_cloud_micro
        datastore_pattern:
        persistent_datastore_pattern:
        allow_mixed_datastores: true
        clusters: []
